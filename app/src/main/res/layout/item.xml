<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trainer_list_card_view"
    style="@style/cardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        style="@style/cardRelativeLayoutStyle"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/trainer_image"
            style="@style/cardImageViewStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/news_preview_image" />

        <TextView
            android:id="@+id/trainer_name"
            style="@style/cardQuestionTitleStyle" />

        <TextView
            android:id="@+id/trainer_intro"
            style="@style/baseCardTextStyle" />
        <TextView
            android:id="@+id/trainer_tel"
            style="@style/baseCardTextStyle3"/>

        <Button
            android:id="@+id/trainer_call_button"
            android:background="@drawable/btn_nor_down"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Call"
            android:layout_below="@id/trainer_tel"
            android:layout_alignParentRight="true"

            android:textAllCaps="false"
            android:textColor="#ffffff"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>